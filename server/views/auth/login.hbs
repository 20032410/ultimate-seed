<form class="form-horizontal form-login" method="post">
  <input type="hidden" name="_csrf" value="{{csrf}}"/>

  {{#if messages}}
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {{#each messages}}
      <div>{{{this}}}</div>
      {{/each}}
    </div>
  {{/if}}

  <h2>Please log in</h2>

  <div class="row form-group">
    <div class="col-md-12">
      <input type="text" class="form-control" name="username" placeholder="e-mail address" value="{{form.username}}"/>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-12">
      <input type="password" class="form-control" name="password" placeholder="password"/>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-12">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="rememberMe">
          Remember me
        </label>
      </div>
    </div>
  </div>

  <hr>

  <p>
    <button class="btn btn-inverse btn-lg btn-login" type="submit">Login</button>
    <button class="btn btn-default btn-lg btn-regsiter" onclick="location.href='/register'; return false;">Register</button>
  </p>

  <hr>

  <p>
    <a class="btn btn-facebook btn-block" href="/auth/facebook"><i class="icon-facebook"></i> | Connect with Facebook</a>
  </p>

  <p>
    <a class="btn btn-google-plus btn-block" href="/auth/google"><i class="icon-google-plus"></i> | Connect with Google+</a>
  </p>

  <p>
    <a class="btn btn-twitter btn-block" href="/auth/twitter"><i class="icon-twitter"></i> | Connect with Twitter</a>
  </p>
</form>

<script>
  window.onload = function () {
    $('.form-login input[name="{{focus}}"]').focus();
  }
</script>
